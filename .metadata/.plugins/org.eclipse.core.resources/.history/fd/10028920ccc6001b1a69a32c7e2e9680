package operation;

public class Entites {

	private int number = 0;
	private String holder = "";
	private double balance = 0;

	public Entites(int number, String holder) {
		this.number = number;
		this.holder = holder;
	}

	public Entites(int number, String holder, double initialDeposit) {
		this.number = number;
		this.holder = holder;
		deposit(initialDeposit);
	}

	public String getHolder() {
		return holder;
	}

	public void setHolder(String holder) {
		this.holder = holder;
	}

	public int getNumber() {
		return number;
	}

	public double getBalance() {
		return balance;
	}
	
	public void deposit(double amount) {
		this.balance += amount;		
	}
	
	public void withdraw(double amount) {
		balance -= amount + 5;
	}

}
